@model ADWeb.ViewModels.CreateGroupVM

@{
    ViewBag.Title = "Create New Group";
    Layout = "~/Views/Shared/_Groups.cshtml";
}

<h3>Create New Group</h3>
<p>Use the fields below to create a new group in the domain. Note: All fields marked with an asterisks are required.</p>

@using(Html.BeginForm("CreateGroup", "Group", FormMethod.Post, new { @class="form-horizontal", role="form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-sm-8">
        <label for="GroupName">Group Name*</label>
            @Html.TextBoxFor(m => m.GroupName, new { @class="form-control", autofocus="autofocus" })
            @Html.ValidationMessageFor(m => m.GroupName)
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-8">
        <label for="GroupNotes">Description</label>
            @Html.TextAreaFor(m => m.Description, new { rows="8", cols="12", @class="form-control", autofocus="autofocus" })
            <span class="help-block">Enter a brief description of what the group will be used for.</span>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-8" >
            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span> Create Group</button>
        </div>
    </div>
}

