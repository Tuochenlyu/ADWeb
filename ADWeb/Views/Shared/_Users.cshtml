<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/x-icon" href="~/user.ico" />
    <link href="@Url.Content("~/content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/content/css/custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/content/css/users.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/content/js/jquery-1.10.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/content/js/bootstrap.min.js")" type="text/javascript"></script>
    @RenderSection("headSection", false)
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle Navigation</span> <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ADWeb - Users", "Index", null, new { @class="navbar-brand"})
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <span class="glyphicon glyphicon-user"></span> @User.Identity.Name <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="@Url.Action("MySettings","Home")"><span class="glyphicon glyphicon-cog"></span> My Settings</a>
                            </li>
                            <li>
                                <a href="@Url.Action("LogOff", "Home")"><span class="glyphicon glyphicon-off"></span> Log Off</a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Quick Links <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                            <li><a href="@Url.Action("Index", "Users")"><span class="glyphicon glyphicon-list"></span> Users Home</a></li>
                            <li><a href="@Url.Action("CreateUser", "Users")"><span class="glyphicon glyphicon-user"></span> Create User</a></li>
                            <li><a href="@Url.Action("Search", "Users")"><span class="glyphicon glyphicon-search"></span> Search User</a></li>
                            <li class="nav-divider"></li>
                            <li><a href="@Url.Action("Index", "Groups")"><span class="glyphicon glyphicon-book"></span> Groups</a></li>
                            <li><a href="@Url.Action("Help", "Home")"><span class="glyphicon glyphicon-question-sign"></span> Help</a></li>
                            <li><a href="@Url.Action("About", "Home")"><span class="glyphicon glyphicon-info-sign"></span> About</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li><a href="@Url.Action("Index", "Users")"><span class="glyphicon glyphicon-home"></span> Users</a></li>
                    <li><a href="@Url.Action("CreateUser", "Users")"><span class="glyphicon glyphicon-user"></span> Create User</a></li>
                    <li><a href="@Url.Action("Search", "Users")"><span class="glyphicon glyphicon-search"></span> Search</a></li>
                    <li class="nav-divider"></li>
                    <li><a href="@Url.Action("Index", "Groups")"><span class="glyphicon glyphicon-book"></span> Groups</a></li>
                    <li><a href="@Url.Action("Help", "Home")"><span class="glyphicon glyphicon-question-sign"></span> Help</a></li>
                    <li><a href="@Url.Action("About", "Home")">About</a></li>
                </ul>

            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                <div class="content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
